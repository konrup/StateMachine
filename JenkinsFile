pipeline {

  stages {

    stage('Build') {
      steps {
        echo 'Building...'
        sh "./gradlew assemble"
      }
    }

    stage('Test') {
      steps {
        echo 'Testing...'
        sh "./gradlew test"
      }
    }

    stage('Deploy') {
      steps {
        echo 'Deployment stage to be defined...'
      }
    }
  }
}
